<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bigstark="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_gravity="center"
    android:gravity="center">

  <com.strawberryswing.upmusic.video.BigstarPlayerView
      android:id="@+id/bigstar_player_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      bigstark:pauseIcon="@drawable/icon_pause"
      bigstark:playIcon="@drawable/icon_play"
      bigstark:seekBarProgressDrawable="@drawable/seekbar_progress"
      bigstark:seekBarThumb="@drawable/seekbar_thumb"
      bigstark:toBaseScreenIcon="@drawable/viedo_full"
      bigstark:toFullScreenIcon="@drawable/viedo_full"
      android:gravity="center"
      android:layout_centerInParent="true"

    />


</RelativeLayout>
