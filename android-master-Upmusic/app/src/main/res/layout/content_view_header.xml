<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_listview_header"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/colorBlackTransparent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransparent">

        <ImageView
            android:id="@+id/imageview_list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlackTransparent">

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="16.7sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.02"
        android:gravity="center_horizontal"
        android:text="재생목록"
        />

    <Button
        android:id="@+id/btn_list_header_toggle"
        android:layout_width="27dp"
        android:layout_height="20.3dp"
        android:background="@drawable/player_down"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="7.7dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        />


</RelativeLayout>

