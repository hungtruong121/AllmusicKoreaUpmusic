<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_peeked_player"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:background="@color/colorBlackTransparent"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="12.3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_peek_playlist"
                android:layout_width="20.7dp"
                android:layout_height="20.7dp"
                android:background="@drawable/music_list" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="11.7dp"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_peek_01"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:gravity="left|bottom"
                android:letterSpacing="-0.02"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="13.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_peek_02"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:gravity="left|top"
                android:letterSpacing="-0.02"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15.7dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_peek_prev"
            android:layout_width="11.3dp"
            android:layout_height="11.3dp"
            android:background="@drawable/player_play_02"
            android:layout_marginRight="13dp"/>

        <Button
            android:id="@+id/btn_peek_play"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/player_play_01"
            android:layout_marginRight="13dp"
            />

        <Button
            android:id="@+id/btn_peek_next"
            android:layout_width="11.3dp"
            android:layout_height="11.3dp"
            android:background="@drawable/player_play_03" />

    </LinearLayout>


</RelativeLayout>

