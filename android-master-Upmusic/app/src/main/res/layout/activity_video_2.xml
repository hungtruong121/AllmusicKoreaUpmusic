<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bigstark="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.strawberryswing.upmusic.video.BigstarVideoView
      android:id="@+id/bigstar_video_view"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      bigstark:pauseIcon="@drawable/icon_pause"
      bigstark:playIcon="@drawable/icon_play"
      bigstark:seekBarProgressDrawable="@drawable/seekbar_progress"
      bigstark:seekBarThumb="@drawable/seekbar_thumb"
      bigstark:toBaseScreenIcon="@drawable/viedo_full"
      bigstark:toFullScreenIcon="@drawable/viedo_full"
      />

  <Button
      android:id="@+id/btn_appear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="appear"
      />

  <Button
      android:id="@+id/btn_disappear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="disappear"
      />

</LinearLayout>